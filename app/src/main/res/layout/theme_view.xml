<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="?attr/themeColor"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_1"
            app:shapeAppearanceOverlay="@style/curved" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_2"
            app:shapeAppearanceOverlay="@style/curved" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_3"
            app:shapeAppearanceOverlay="@style/curved" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_4"
            app:shapeAppearanceOverlay="@style/curved" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_5"
            app:shapeAppearanceOverlay="@style/curved" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_6"
            app:shapeAppearanceOverlay="@style/curved" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_7"
            app:shapeAppearanceOverlay="@style/curved" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_8"
            app:shapeAppearanceOverlay="@style/curved" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/theme_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_icon"
            android:tint="@color/theme_color_9"
            app:shapeAppearanceOverlay="@style/curved" />

    </LinearLayout>

</LinearLayout>