<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="70dp"
    android:background="?attr/nav_header_color_as_theme"
    android:orientation="vertical"
    android:padding="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginTop="7dp"
        android:background="?attr/nav_header_color_as_theme"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher"
        app:shapeAppearanceOverlay="@style/ultraCurved"
        app:strokeColor="?attr/text_color_as_theme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="@string/nav_text"
        android:textColor="?attr/text_color_as_theme"
        android:textSize="20sp" />
</LinearLayout>